generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())

  ownedProjects   Project[] @relation("OwnerProjects")
  memberProjects  Project[] @relation("ProjectMembers")
  authoredTickets Ticket[]  @relation("TicketAuthor")
  assignedTickets Ticket[]  @relation("TicketAssignee")
  Comment         Comment[]
}

model Project {
  id        String   @id @default(uuid())
  name      String
  ownerId   String
  owner     User     @relation("OwnerProjects", fields: [ownerId], references: [id])
  members   User[]   @relation("ProjectMembers")
  tickets   Ticket[]
  createdAt DateTime @default(now())
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  DONE
}

model Ticket {
  id          String       @id @default(uuid())
  title       String
  description String
  status      TicketStatus @default(OPEN)
  projectId   String
  project     Project      @relation(fields: [projectId], references: [id])
  authorId    String
  author      User         @relation("TicketAuthor", fields: [authorId], references: [id])
  assigneeId  String?
  assignee    User?        @relation("TicketAssignee", fields: [assigneeId], references: [id])
  createdAt   DateTime     @default(now())
  comments    Comment[]
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())

  ticket   Ticket @relation(fields: [ticketId], references: [id])
  ticketId String

  author   User   @relation(fields: [authorId], references: [id])
  authorId String
}
